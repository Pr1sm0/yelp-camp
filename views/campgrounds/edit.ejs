<%- include("../partials/header") %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="width:30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="campground[name]">Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" placeholder="name" required>
            </div>
            <div class="form-group">
                <label for="campground[price]">Price</label>
                <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0" step="0.1" placeholder="price" required>
            </div>
            <div class="form-group">
                <label for="campground[image]">Image Url</label>
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" placeholder="image" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" placeholder="Synevyr National Park, Ukraine" required>
            </div>
            <div class="form-group">
                <label for="campground[description]">Description</label>
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" placeholder="description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <div class="go-back-anchor">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>